{% extends 'base.html.twig' %}

{% block body %}

    <div class="container body-content">
        <div class="row">
            {% for article in pagination %}
                <div class="col-md-6">
                    <article>
                        <header>
                            <h2>{{ article.title }}</h2>
                        </header>

                        <p>
                            {{ article.summary }}
                        </p>

                        <a href="{{ path('article_view', {'id': article.id}) }}">
                            <img src="{{ asset('uploads/images/' ~ article.image) }}" width="400" height="200" alt=""></a>

                        <small class="author">
                            {{ article.author.fullName }}
                        </small>

                        Views: {{ article.viewCount }}

                        <footer>
                            <div class="pull-center">
                                <a class="btn btn-info btn-xs "
                                   href="{{ path('article_view', {'id': article.id}) }}">Read more &raquo;
                                </a>
                            </div>
                        </footer>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>

    {# display navigation #}
    <div class="navigation text-center font-weight-bold">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}



